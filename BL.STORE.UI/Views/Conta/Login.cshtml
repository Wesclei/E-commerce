@model BL.STORE.UI.ViewModels.Conta.Login.LoginVM

@{
    ViewBag.Title = "Login";
}
<h2>@ViewBag.Title</h2>

<div class="container-xl">
    <div class="row">
        <form class="col-md-6 col-sm-10" method="post">
            <div class="form-group">
                <label>Email</label>
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", autofocus = "" })
                <small>
                    @Html.ValidationMessageFor(model => model.Email, null, new { @class = "text-danger" })
                </small>
            </div>

            <div class="form-group">
                <label>Senha</label>
                @Html.PasswordFor(model => model.Senha, new { @class = "form-control" })
                <small>
                    @Html.ValidationMessageFor(model => model.Senha, null, new { @class = "text-danger" })
                </small>
            </div>

            <div class="form-group form-check">
                @Html.CheckBoxFor(model => model.PermanecerLogado, new { @class = "form-check-input" })
                @Html.LabelFor(model => model.PermanecerLogado, "Permanecer Logado")
            </div>

            <div class="form-group">
                <button class="btn btn-sm btn-outline-success">Login</button>
                <a class="btn btn-sm btn-outline-primary" href="@Url.Action("index", "Home")">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootstrap.validade.js"></script>

}